<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="#1B395C" />
                    <corners android:radius="5dp" />
                    <gradient android:startColor="#3D689A"
                        android:endColor="#96B4D7"
                        android:angle="270"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_wc_white_36dp" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_wc_white_36dp" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>
